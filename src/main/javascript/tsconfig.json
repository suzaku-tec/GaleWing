{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "*": [
        "@types/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
